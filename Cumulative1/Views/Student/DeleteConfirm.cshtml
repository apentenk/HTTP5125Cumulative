﻿@model Cumulative1.Models.Student

@{
    ViewBag.Title = "Delete Student";
}


<div id="containershow">
    <nav>
        <a class="navlink" href="/Student/Show/@Model.StudentId">Cancel</a>
    </nav>
    <h2>Are you sure you want to delete @Model.FirstName @Model.LastName?</h2>
    <p>This action cannot be undone.</p>
    <button class="delbutton" onclick="DeleteStudent(@Model.StudentId);">
        Confirm Delete
    </button>
</div>